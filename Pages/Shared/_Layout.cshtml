<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperShapeCalculator</title>
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="android-chrome" sizes="192x192" href="/android-chrome-192x192.png">
    <link rel="android-chrome" sizes="512x512" href="/android-chrome-512x512.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="shape-container">
                <div class="shape-logo">
                    <img src="~/assets/shape logo.svg"/>
                </div>
                <a href="#" class="navbar-brand">Super Shape Calculator</a>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
            @RenderBody()
    </div>

    <footer class="footer text-center">
        <div class="container">
            &copy; PetraJT @DateTime.Now.Year
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
